@page
@model ClassManagement.Pages.IndexModel
@{
    ViewData["Title"] = "Class Management";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <h4>@(Model.EditClassId.HasValue ? "Edit Class" : "Add New Class")</h4>
            <form method="post">
                <input type="hidden" asp-for="EditClassId" />
                <div class="mb-2">
                    <label asp-for="NewClass.Name" class="form-label">Class Name</label>
                    <input type="text" asp-for="NewClass.Name" class="form-control" />
                </div>
                <div class="mb-2">
                    <label asp-for="NewClass.PersonCount" class="form-label">Person Count</label>
                    <input type="number" asp-for="NewClass.PersonCount" class="form-control" />
                </div>
                <div class="mb-2">
                    <label asp-for="NewClass.Description" class="form-label">Description</label>
                    <textarea asp-for="NewClass.Description" class="form-control"></textarea>
                </div>

                @if (Model.EditClassId.HasValue)
                {
                    <button type="submit" asp-page-handler="Edit" class="btn btn-primary">Save Changes</button>
                    <a href="/Index" class="btn btn-secondary">Cancel</a>
                }
                else
                {
                    <button type="submit" asp-page-handler="Add" class="btn btn-success">Add Class</button>
                }
            </form>
        </div>

        <div class="col-md-6">
            <h4>Class List</h4>
            <form method="get">
                <input type="text" name="searchClassName" value="@Request.Query["searchClassName"]" placeholder="Search by Name" class="form-control mb-2" />
                <input type="number" name="minStudents" value="@Request.Query["minStudents"]" placeholder="Min Students" class="form-control mb-2" />
                <input type="number" name="maxStudents" value="@Request.Query["maxStudents"]" placeholder="Max Students" class="form-control mb-2" />
                <button type="submit" class="btn btn-primary mb-2">Apply Filters</button>
            </form>

            <table class="table table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Person Count</th>
                        <th>Description</th>
                        <th>Is Active</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.FilteredData)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>@item.PersonCount</td>
                            <td>@item.Description</td>
                            <td>@(item.IsActive ? "Yes" : "No")</td>
                            <td>
                                <form method="get">
                                    <input type="hidden" name="editClassId" value="@item.Id" />
                                    <button type="submit" class="btn btn-info btn-sm">Edit</button>
                                </form>
                                <form method="post">
                                    <input type="hidden" name="id" value="@item.Id" />
                                    <button type="submit" asp-page-handler="Delete" class="btn btn-danger btn-sm mt-1">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <!-- Sayfalama -->
            @if (Model.TotalPages > 1)
            {
                <nav>
                    <ul class="pagination">
                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                <a class="page-link" href="?pageIndex=@i">@i</a>
                            </li>
                        }
                    </ul>
                </nav>
            }

            <div class="mt-4">
                <form method="post">
                    <button type="submit" asp-page-handler="ExportJson" class="btn btn-secondary">Export All Classes (JSON)</button>
                </form>
                <form method="post">
                    <input type="checkbox" name="selectedColumns" value="Name" /> Name
                    <input type="checkbox" name="selectedColumns" value="PersonCount" /> PersonCount
                    <input type="checkbox" name="selectedColumns" value="Description" /> Description
                    <button type="submit" asp-page-handler="ExportFilteredJson" class="btn btn-secondary mt-2">Export Selected Columns (JSON)</button>
                </form>
            </div>

        </div>
    </div>
</div>
