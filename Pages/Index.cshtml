@page
@model ClassManagement.Pages.IndexModel
@{
    ViewData["Title"] = "Class Management";
}

<div class="container mt-4">
    <div class="row">
        <!-- Sol tarafta Filtreleme Formu -->
        <div class="col-md-6">
            <h4>Filter Classes</h4>
            <form method="get">
                <div class="mb-2">
                    <label for="searchClassName" class="form-label">Class Name</label>
                    <input type="text" name="searchClassName" id="searchClassName" 
                        value="@Request.Query["searchClassName"]" class="form-control" />
                </div>
                <div class="mb-2">
                    <label for="minStudents" class="form-label">Min Students</label>
                    <input type="number" name="minStudents" id="minStudents" 
                        value="@Request.Query["minStudents"]" class="form-control" />
                </div>
                <div class="mb-2">
                    <label for="maxStudents" class="form-label">Max Students</label>
                    <input type="number" name="maxStudents" id="maxStudents" 
                        value="@Request.Query["maxStudents"]" class="form-control" />
                </div>
                <button type="submit" class="btn btn-primary">Filter</button>
            </form>
        </div>

        <!-- Sağ tarafta Add Class Formu -->
        <div class="col-md-6">
            <h4>Add Class</h4>
            <form method="post">
                <div class="mb-2">
                    <label for="className" class="form-label">Class Name</label>
                    <input type="text" asp-for="NewClass.ClassName" class="form-control" />
                </div>
                <div class="mb-2">
                    <label for="studentCount" class="form-label">Student Count</label>
                    <input type="number" asp-for="NewClass.StudentCount" class="form-control" />
                </div>
                <div class="mb-2">
                    <label for="description" class="form-label">Description</label>
                    <textarea asp-for="NewClass.Description" class="form-control"></textarea>
                </div>
                <button type="submit" asp-page-handler="Add" class="btn btn-success">Add Class</button>
            </form>
        </div>
    </div>

    <div class="row mt-4">
        <!-- Sol tarafta Active Filters -->
        <div class="col-md-4">
            <h4>Active Filters</h4>
            @if (!string.IsNullOrEmpty(Request.Query["searchClassName"]) || 
                 !string.IsNullOrEmpty(Request.Query["minStudents"]) || 
                 !string.IsNullOrEmpty(Request.Query["maxStudents"]))
            {
                <ul class="list-group">
                    @if (!string.IsNullOrEmpty(Request.Query["searchClassName"]))
                    {
                        <li class="list-group-item">Class Name: @Request.Query["searchClassName"]</li>
                    }
                    @if (!string.IsNullOrEmpty(Request.Query["minStudents"]))
                    {
                        <li class="list-group-item">Min Students: @Request.Query["minStudents"]</li>
                    }
                    @if (!string.IsNullOrEmpty(Request.Query["maxStudents"]))
                    {
                        <li class="list-group-item">Max Students: @Request.Query["maxStudents"]</li>
                    }
                </ul>
            }
            else
            {
                <p>No active filters</p>
            }
        </div>

        <!-- Sağ tarafta Class List -->
        <div class="col-md-8">
            <h4>Class List</h4>
            <table class="table table-bordered">
                <thead class="table-warning">
                    <tr>
                        <th>Class Name</th>
                        <th>Student Count</th>
                        <th>Description</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                    <tbody>
                        @foreach (var item in Model.FilteredData)
                        {
                            <tr>
                                <!-- ClassName sütunu, seçili ise highlight-classname sınıfı eklenir -->
                                <td class="@(Model.SelectedColumns.Contains("ClassName") ? "highlight-classname" : "")">@item.ClassName</td>
                                
                                <!-- StudentCount sütunu, seçili ise highlight-studentcount sınıfı eklenir -->
                                <td class="@(Model.SelectedColumns.Contains("StudentCount") ? "highlight-studentcount" : "")">@item.StudentCount</td>
                                
                                <!-- Description sütunu, seçili ise highlight-description sınıfı eklenir -->
                                <td class="@(Model.SelectedColumns.Contains("Description") ? "highlight-description" : "")">@item.Description</td>

                                <td>
                                    <form method="post">
                                        <input type="hidden" name="id" value="@item.Id" />
                                        <button type="submit" asp-page-handler="Edit" class="btn btn-info btn-sm">Edit</button>
                                        <button type="submit" asp-page-handler="Delete" class="btn btn-danger btn-sm">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>

            </table>

            <form method="post">
                <button type="submit" asp-page-handler="ExportJson" class="btn btn-secondary">Export All JSON</button>
            </form>

            <form method="post">
                @foreach (var col in Model.SelectedColumns)
                {
                    <input type="hidden" name="selectedColumns" value="@col" />
                }
                <button type="submit" asp-page-handler="ExportFilteredJson" class="btn btn-secondary">Export Selected Coloumns JSON</button>
            </form>
            <form method="post">
                <button type="submit" asp-page-handler="ExportFilteredJsonOnly" class="btn btn-secondary">Export Filtered JSON</button>
            </form>




            <div class="mt-3">
                <h5>Select Columns to Export</h5>
                <form method="get">
                    <div>
                        <input type="checkbox" name="selectedColumns" value="ClassName" 
                            @(Model.SelectedColumns.Contains("ClassName") ? "checked" : "") /> Class Name
                        <input type="checkbox" name="selectedColumns" value="StudentCount" 
                            @(Model.SelectedColumns.Contains("StudentCount") ? "checked" : "") /> Student Count
                        <input type="checkbox" name="selectedColumns" value="Description" 
                            @(Model.SelectedColumns.Contains("Description") ? "checked" : "") /> Description
                    </div>
                    <button type="submit" class="btn btn-secondary mt-2">Apply Filter</button>
                </form>
            </div>


            <!-- Sayfalama -->
            @if (Model.TotalPages > 1)
            {
                <nav>
                    <ul class="pagination">
                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                <a class="page-link" href="?pageIndex=@i">@i</a>
                            </li>
                        }
                    </ul>
                </nav>
            }
        </div>
    </div>
</div>